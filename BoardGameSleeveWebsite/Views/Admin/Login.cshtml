
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>@ViewBag.Title - Board Game Sleeves</title>
		<link href="/css/style.css" rel="stylesheet" />
		<link href="~/css/administration.css" rel="stylesheet" />
		<script src="https://code.jquery.com/jquery-3.1.1.min.js"
				integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
				crossorigin="anonymous"></script>
	</head>
	<body style="background: #3d3d3d;">
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<div class="login">
						<form action="/admin/trylogin" method="post" >
							<h2>Login</h2>
							<p>Username</p>
							<input type="text" name="username" value="" id="loginName" />

							<p>Password</p>
							<input type="text" name="password" value="" id="loginPassword" />

							<input type="submit" name="name" value="Login" onclick="loginClicked();"/>
						</form>
					</div>

				</div>
			</div>
		</div>
		<script src="~/scripts/login.js"></script>
	</body>
</html>