@using BoardGameSleeveWebsite.ViewModels
@model List<Size>

@{
    ViewBag.Title = "Size";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h2>Size</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <ul>
          @{ 
              foreach (var size in Model)
              {
                  <li>Width: @size.Width - Height: @size.Height</li>
              }
          }
        </ul>
    </div>
    <div class="col-md-4">
       <h2>Create </h2>
        <p>Width</p>
        <input type="number" name="Width" value="" id="width-Size" />

        <p>Height</p>
        <input type="number" name="Height" value="" id="height-Size" />

        <p>Size Name (Eks. Large)</p>
        <input type="text" name="Name" value="" id="name-Size" />

        <p>Description</p>
        <input type="text" name="Name" value="" id="description-Size" />


        <div id="create-size-button">CREATE SIZE</div>
    </div>
</div>


