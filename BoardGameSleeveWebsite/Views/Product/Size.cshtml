@using BoardGameSleeveWebsite.ViewModels
@model VMSize
@{
    ViewBag.Title = "Size";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count = 0;
}
<main class="products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.Products.FirstOrDefault().Size.Name.ToUpper() SLEEVES</h1>
            </div>
        </div>
        <hr />
        <div class="row">
            @foreach (var p in Model.Products)
            {
                count++;
                <div class="col-md-4">
                    <div class="product">
                        @{
                            string href = "href=/product/singleproduct/" + p.ID;
                        }
                        <a @href>
                            <img src="~/img/Products/@p.Img" />
                        </a>
                        <h3>Board Game Sleeves •  @p.Size.Name</h3>
                        <h4>@p.Name</h4>

                        <ul>
                            <li>
                                Size: @p.Size.Width x @p.Size.Height mm
                            </li>
                            <li>
                                Color: @p.Color
                            </li>

                            <li>@(!String.IsNullOrWhiteSpace(p.Description) && p.Description.Length >= 25 ? p.Description.Substring(0, 25) + "...." : p.Description).</li>
                        </ul>

                        <h4>Price: @p.Price</h4>
                        <a class="productLink" @href>
                            Add to cart
                        </a>
                    </div>
                </div>

                            if (count % 3 == 0)
                            {
                                @Html.Raw("</div> <hr /> <div class=\"row\">");
                                }
                            }
        </div>
    </div>


</main>
